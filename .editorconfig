# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{xml, ts, json, yml, properties}]
indent_size = 2

[*.md]
indent_size = 2
max_line_length = off
trim_trailing_whitespace = false

[*.java]
indent_size = 4
